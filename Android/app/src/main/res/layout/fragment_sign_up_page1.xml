<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center"
        android:gravity="top|center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:gravity="top|center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/d10">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d40"
                    android:layout_marginTop="@dimen/d30"
                    android:layout_marginEnd="@dimen/d40"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtFullName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:fontFamily="@font/hkgrotesk_bold"
                                android:gravity="start|center"
                                android:text="@string/full_name"
                                android:textColor="#333132"
                                android:textSize="@dimen/sp18" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="2dp"
                                android:fontFamily="@font/hkgrotesk_bold"
                                android:gravity="start|center"
                                android:text="*"
                                android:textColor="#E50027"
                                android:textSize="@dimen/sp20"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">

                            <EditText
                                android:paddingBottom="3dp"
                                android:id="@+id/edtFullName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginTop="@dimen/d5"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/hkgrotesk_regular"
                                android:gravity="start|center"
                                android:hint="@string/your_name"
                                android:inputType="text"
                                android:text=""
                                android:textAlignment="viewStart"
                                android:textColor="#848384"
                                android:textColorHint="#99848384"
                                android:textSize="@dimen/sp14" />

                            <ImageView
                                android:id="@+id/edtFullNameValidation"
                                android:layout_width="@dimen/d16"
                                android:layout_height="@dimen/d16"
                                android:src="@drawable/ic_validation_success"
                                android:visibility="gone" />
                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d1"
                            android:layout_marginTop="@dimen/d5"
                            android:layout_marginBottom="@dimen/d10"
                            android:background="#848384" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:fontFamily="@font/hkgrotesk_bold"
                                android:gravity="start|center"
                                android:text="@string/email"
                                android:textColor="#333132"
                                android:textSize="@dimen/sp18" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="2dp"
                                android:fontFamily="@font/hkgrotesk_bold"
                                android:gravity="start|center"
                                android:text="*"
                                android:textColor="#E50027"
                                android:textSize="@dimen/sp20"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edtEmail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginTop="@dimen/d5"
                                android:paddingBottom="3dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/hkgrotesk_regular"
                                android:gravity="start|center"
                                android:hint="@string/enter_your_email"
                                android:inputType="textEmailAddress"
                                android:text=""
                                android:textAlignment="viewStart"
                                android:textColor="#848384"
                                android:textColorHint="#99848384"
                                android:textSize="@dimen/sp14" />

                            <ImageView
                                android:id="@+id/edtEmailValidation"
                                android:layout_width="@dimen/d16"
                                android:layout_height="@dimen/d16"
                                android:src="@drawable/ic_validation_success"
                                android:visibility="gone" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d1"
                            android:layout_marginTop="@dimen/d5"
                            android:layout_marginBottom="@dimen/d10"
                            android:background="#848384" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtPassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:fontFamily="@font/hkgrotesk_bold"
                                android:gravity="start|center"
                                android:text="@string/password"
                                android:textColor="#333132"
                                android:textSize="@dimen/sp18" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="2dp"
                                android:fontFamily="@font/hkgrotesk_bold"
                                android:gravity="start|center"
                                android:text="*"
                                android:textColor="#E50027"
                                android:textSize="@dimen/sp20"
                                android:visibility="visible" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edtPassword"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginTop="@dimen/d5"
                                android:layout_weight="1"
                                android:paddingBottom="3dp"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/hkgrotesk_regular"
                                android:gravity="start|center"
                                android:hint="********"
                                android:inputType="textPassword"
                                android:text=""
                                android:textAlignment="viewStart"
                                android:textColor="#848384"
                                android:textColorHint="#99848384"
                                android:textSize="@dimen/sp14" />

                            <ImageView
                                android:id="@+id/edtPasswordValidation"
                                android:layout_width="@dimen/d16"
                                android:layout_height="@dimen/d16"
                                android:src="@drawable/ic_validation_success"
                                android:visibility="gone" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d1"
                            android:layout_marginTop="@dimen/d5"
                            android:layout_marginBottom="@dimen/d10"
                            android:background="#848384" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtConfirmPassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:fontFamily="@font/hkgrotesk_bold"
                                android:gravity="start|center"
                                android:text="@string/confirm_password"
                                android:textColor="#333132"
                                android:textSize="@dimen/sp18" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="2dp"
                                android:fontFamily="@font/hkgrotesk_bold"
                                android:gravity="start|center"
                                android:text="*"
                                android:textColor="#E50027"
                                android:textSize="@dimen/sp20"
                                android:visibility="visible" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edtConfirmPassword"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginTop="@dimen/d5"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/hkgrotesk_regular"
                                android:gravity="start|center"
                                android:hint="********"
                                android:paddingBottom="3dp"
                                android:inputType="textPassword"
                                android:text=""
                                android:textAlignment="viewStart"
                                android:textColor="#848384"
                                android:textColorHint="#99848384"
                                android:textSize="@dimen/sp14" />

                            <ImageView
                                android:id="@+id/edtConfirmPasswordValidation"
                                android:layout_width="@dimen/d16"
                                android:layout_height="@dimen/d16"
                                android:src="@drawable/ic_validation_success"
                                android:visibility="gone" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d1"
                            android:layout_marginTop="@dimen/d5"
                            android:layout_marginBottom="@dimen/d10"
                            android:background="#848384" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtMobileNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:fontFamily="@font/hkgrotesk_bold"
                                android:gravity="start|center"
                                android:text="@string/mobile_number"
                                android:textColor="#333132"
                                android:textSize="@dimen/sp18" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="2dp"
                                android:fontFamily="@font/hkgrotesk_bold"
                                android:gravity="start|center"
                                android:text="*"
                                android:textColor="#E50027"
                                android:textSize="@dimen/sp20"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edtMobileNumber"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginTop="@dimen/d5"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/hkgrotesk_regular"
                                android:gravity="start|center"
                                android:hint="xxxx xxxx"
                                android:inputType="phone"
                                android:maxLength="8"
                                android:text=""
                                android:paddingBottom="3dp"
                                android:textAlignment="viewStart"
                                android:textColor="#848384"
                                android:textColorHint="#99848384"
                                android:textSize="@dimen/sp14" />

                            <ImageView
                                android:id="@+id/edtMobileNumberValidation"
                                android:layout_width="@dimen/d16"
                                android:layout_height="@dimen/d16"
                                android:src="@drawable/ic_validation_success"
                                android:visibility="gone" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d1"
                            android:layout_marginTop="@dimen/d5"
                            android:layout_marginBottom="@dimen/d10"
                            android:background="#848384" />
                    </LinearLayout>


                    <FrameLayout
                        android:id="@+id/nextBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/d20"
                        android:layout_marginBottom="@dimen/d20"
                        android:background="@drawable/btn_bg"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:minHeight="@dimen/d40">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/hkgrotesk_bold"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/next"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/sp18"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/d24"
                            android:layout_height="@dimen/d24"
                            android:layout_gravity="end|center"
                            android:layout_marginStart="@dimen/d14"
                            android:layout_marginEnd="@dimen/d20"
                            android:src="@drawable/ic_next_arrow" />
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>
    </LinearLayout>
</FrameLayout>