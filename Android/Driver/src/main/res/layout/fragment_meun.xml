<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:animateLayoutChanges="true"
    android:background="#EAEAEA"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2.5">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d20"
            android:layout_marginTop="@dimen/d30"
            android:layout_marginEnd="@dimen/d20"
            android:layout_marginBottom="@dimen/d10"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/d20"
        android:layout_marginTop="@dimen/d20"
        android:layout_marginEnd="@dimen/d20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/previous_requests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:ellipsize="end"
            android:fontFamily="@font/hkgrotesk_bold"
            android:gravity="start|center"
            android:maxLines="2"
            android:foreground="?attr/selectableItemBackground"
            android:paddingTop="@dimen/d10"
            android:paddingBottom="@dimen/d10"
            android:text="@string/previous_requests"
            android:textAlignment="viewStart"
            android:textColor="#333132"
            android:textSize="@dimen/d18"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:foreground="?attr/selectableItemBackground"
            android:paddingTop="@dimen/d10"
            android:paddingBottom="@dimen/d10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_weight="1"
                android:fontFamily="@font/hkgrotesk_bold"
                android:gravity="start|center"
                android:maxLines="2"
                android:text="@string/settings"
                android:textAlignment="viewStart"
                android:textColor="#333132"
                android:textSize="@dimen/d18"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d12"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_left_arrow" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

