<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.SimpleCoordinatorTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="AppTheme.SimpleCoordinatorTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>


    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:typeface">serif</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>



    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#EFCE4A</item>
    </style>

    <style name="CheckBox" parent="Theme.AppCompat">
        <item name="android:textColorSecondary">#333132</item>
        <item name="colorAccent">#333132</item>
    </style>

    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <!--<item name="colorControlActivated">@color/colorPrimary</item>-->
        <!--<item name="colorSwitchThumbNormal">@color/colorPrimary</item>-->
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="RatingBar2" parent="Theme.AppCompat">
        <item name="colorControlNormal">#707070</item>
        <item name="colorControlActivated">#000000</item>
    </style>

    <style name="RatingBar3" parent="Theme.AppCompat">
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#ffffff</item>
    </style>


    <style name="TextLabel" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#707070</item>
        <item name="android:textColorHighlight">#707070</item>
        <item name="android:textSize">@dimen/d14</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#707070</item>
        <item name="colorControlNormal">#707070</item>
        <item name="colorControlActivated">#707070</item>
        <item name="colorControlHighlight">#707070</item>

    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/hkgrotesk_bold</item>
        <item name="android:textColor">#333132</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/hkgrotesk_bold</item>
        <item name="android:textColor">#333132</item>
        <item name="colorControlNormal">#333132</item>
        <item name="colorAccent">#333132</item>
        <item name="colorControlActivated">#333132</item>
        <item name="colorControlHighlight">#333132</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="EditText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">#99848384</item>
        <item name="colorAccent">#99848384</item>
        <item name="android:fontFamily">@font/lato_semibold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">@dimen/d14</item>
    </style>

    <style name="RadioButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">@dimen/d40</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="progressTheme">
        <item name="colorAccent">@color/colorAccent</item> <!-- Whatever color you want-->
    </style>



</resources>
