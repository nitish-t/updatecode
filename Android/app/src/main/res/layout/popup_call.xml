<?xml version="1.0" encoding="utf-8"?>
<com.app.roadz.modules.base.CallPopup_ xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="1.2">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/d12"
        app:cardElevation="@dimen/d4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/d10"
            android:layout_marginBottom="@dimen/d10"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/d40"
                android:layout_height="@dimen/d40"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/d10"
                android:src="@drawable/ic_call_icon" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/d26"
                android:layout_marginTop="@dimen/d10"
                android:layout_marginRight="@dimen/d26"
                android:fontFamily="@font/hkgrotesk_bold"
                android:gravity="center"
                android:text="@string/are_you_sure"
                android:textColor="#0F0A0A"
                android:textSize="@dimen/sp18" />


            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height=".5dp"-->
                <!--android:layout_marginLeft="@dimen/d26"-->
                <!--android:layout_marginRight="@dimen/d26"-->
                <!--android:background="#333132" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/d40"
                android:layout_marginBottom="@dimen/d20"
                android:gravity="center">

                <TextView
                    android:id="@+id/noBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/d10"
                    android:layout_marginEnd="@dimen/d10"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg"
                    android:fontFamily="@font/hkgrotesk_bold"
                    android:gravity="center"
                    android:minHeight="@dimen/d40"
                    android:text="@string/cancel2"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp18" />

                <TextView
                    android:id="@+id/yesBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/d10"
                    android:layout_marginEnd="@dimen/d10"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg"
                    android:fontFamily="@font/hkgrotesk_bold"
                    android:gravity="center"
                    android:minHeight="@dimen/d40"
                    android:text="@string/yes_call"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp18" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</com.app.roadz.modules.base.CallPopup_>