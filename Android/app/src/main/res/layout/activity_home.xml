                android:layout_weight="1">

                <ImageView
                    android:id="@+id/youtubeBtn"
                    android:layout_width="@dimen/d52"
                    android:layout_height="@dimen/d52"
                    android:layout_gravity="end|top"
                    android:adjustViewBounds="true"
                    android:paddingTop="@dimen/d10"
                    android:paddingEnd="@dimen/d10"
                    android:src="@drawable/ic_youtube_logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/d40"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/d20"
                        android:gravity="center"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".85"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_emergency" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:fontFamily="@font/hkgrotesk_bold"
                        android:gravity="center"
                        android:text="@string/roadside_assistant"
                        android:textColor="#333132"
                        android:textSize="@dimen/sp24" />

                    <Button
                        android:id="@+id/requestEmergencyLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/d30"
                        android:layout_marginTop="@dimen/d10"
                        android:layout_marginRight="@dimen/d30"
                        android:background="@drawable/btn_bg"
                        android:fontFamily="@font/hkgrotesk_bold"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:lines="1"
                        android:allowUndo="false"
                        android:minHeight="@dimen/d40"
                        android:text="@string/request"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/sp18"
                        app:autoSizeMaxTextSize="@dimen/sp18"
                        app:autoSizeMinTextSize="@dimen/sp8"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>
            </FrameLayout>

